<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
     android:background="@color/black">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20.0dip"
        android:text="ShawnChat"
        android:textSize="30.0sp" />

    <TextView
        android:id="@+id/versionNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.0dip"
        android:text="V0.2"
        android:textSize="18.0sp" />

    <TextView
        android:id="@+id/rightsContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20.0dip"
        android:text="© 2012-2013 guohow App. All rights reserved." />
    
    <TextView
        android:id="@+id/emailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rightsContent"
        android:layout_centerHorizontal="true"
        android:text="任何问题邮件:1163397166@qq.com" />

    <TextView
        android:id="@+id/rightsCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailAddress"
        android:layout_centerHorizontal="true"
        android:text="一个软件 版权所有" />

</RelativeLayout>